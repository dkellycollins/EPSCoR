@{
    ViewBag.Title = "GIS Viewer";
    ViewBag.AppName = "GIS";
}

<!--[if IE 7]>
<style>
  html, body {
    margin: 0;
  }
</style>
<![endif]-->
<div id="content" class="claro"
        data-dojo-type="dijit.layout.BorderContainer"
        data-dojo-props="design:'headline', gutters:true"
        style="width: 100%; height: 100%; margin: 0;">

    <div id="rightPane" class="roundedCorners shadow"
        data-dojo-type="dijit.layout.ContentPane"
        data-dojo-props="region:'right'">

        <div data-dojo-type="dijit.layout.AccordionContainer">
            <div data-dojo-type="dijit.layout.ContentPane" id="legendPane"
                data-dojo-props="title:'Legend', selected:true">
                <div id="legendDiv"></div>
            </div>
            <div data-dojo-type="dijit.layout.ContentPane"
                data-dojo-props="title:'Basemap'">
                <div id="basemapGallery" ></div>
            </div>
        </div>
    </div>
    <div id="map" class="roundedCorners shadow"
        data-dojo-type="dijit.layout.ContentPane"
        data-dojo-props="region:'center'"
        style="overflow:hidden;">
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="http://serverapi.arcgisonline.com/jsapi/arcgis/3.5/js/dojo/dijit/themes/claro/claro.css">
    <link rel="stylesheet" href="http://serverapi.arcgisonline.com/jsapi/arcgis/3.5/js/esri/css/esri.css">
    @Styles.Render("~/content/GisViewer.css")
}

@section Scripts {
    <script>var dojoConfig = { parseOnLoad: true };</script>
    <script src="http://serverapi.arcgisonline.com/jsapi/arcgis/3.5/"></script>
    @Scripts.Render("~/scripts/GisViewer.js")
}