@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @RenderSection("Styles", required: false)
        <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css" rel="stylesheet">
        @Styles.Render("~/content/css")
        @Html.Partial("_html5shiv")
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top hideExceptHover">
            <div class="navbar-inner">
                <ul class="nav">
                    <li>@Html.ActionLink("Data Processor", "Index", "DataProcessor", null, null)</li>
                    <li>@Html.ActionLink("Table Indexes", "Index", "TableIndex", null, null)</li>
                    <li>@Html.ActionLink("Users", "Index", "UserProfile", null, null)</li>
                    <li>@Html.ActionLink("Tasks", "Index", "Task", null, null)</li>
                </ul>
            </div>
        </div>

        @RenderBody()

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js"></script>
        @Scripts.Render("~/scripts/googleanalytics.js");
        @RenderSection("Scripts", required: false)
    </body>
</html>
