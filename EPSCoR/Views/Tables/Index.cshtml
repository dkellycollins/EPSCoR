@model EPSCoR.ViewModels.TableIndexVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="calc">
    @Html.Partial("CalcForm", Model.CalcForm)
</div>

<div id="convertedTbls">
    @Html.Partial("ConvertedTablesForm", Model.ConvertedTables)
</div>

<select id="tableSelect">
    @foreach(var table in Model.Tables)
    {
        <option>@table</option>
    }
</select>
<div id="tableDetails">
    <!-- To be loaded when the user selects a table -->
</div>

@section Scripts
{
    <script>
        $('#tableSelect').change(function () {
            var selectedTable = this.value;
            $('#tableDetails').load("http://localhost:6615/tables/details/" + selectedTable);
        });
    </script>
}
