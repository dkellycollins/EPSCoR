@model IEnumerable<EPSCoR.Database.Models.TableIndex>

@if(Model.Count() == 0) {
    <p>No tables.</p>
} else {
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.LabelFor(model => model.FirstOrDefault().Name)
                </th>
                <th>
                    @Html.LabelFor(model => model.FirstOrDefault().Type)
                </th>
                <th>
                    @Html.LabelFor(model => model.FirstOrDefault().DateCreated)
                </th>
                <th>
                    @Html.LabelFor(model => model.FirstOrDefault().DateUpdated)
                </th>
                <th>
                    @Html.LabelFor(model => model.FirstOrDefault().Status)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateUpdated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}