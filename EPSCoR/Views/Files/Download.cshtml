@model IEnumerable<EPSCoR.Database.Models.TableIndex>
@{
    ViewBag.Title = "Cybercommons > Download";
}

<h2>Download Tables</h2>

@if (Model.Count() == 0)
{
    <span>No tables to download.</span>
}
else
{
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.LabelFor(model => model.FirstOrDefault().Name)
            </th>
            <th>
                @Html.LabelFor(model => model.FirstOrDefault().Type)
            </th>
            <th>
                @Html.LabelFor(model => model.FirstOrDefault().DateCreated)
            </th>
            <th>
                @Html.LabelFor(model => model.FirstOrDefault().UploadedByUser)
            </th>
            <th></th>
        </tr>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UploadedByUser)
                </td>
                <td>
                    @Html.RouteLink("Download Csv", "Default", new { controller="Files", action="DownloadCsv", id=item.Name }, new { @class="btn" })
                    <span class="btn btn-danger" onclick="deleteTable('@item.Name')">
                        X
                        @using(Html.BeginForm("Delete", "Tables", FormMethod.Post, new { id="delete-"+item.Name, @class="hide" }))
                        {
                            <input type="hidden" name="id" value="@item.Name" />
                        }
                    </span>
                </td>
            </tr>
        }
    </table>
}

@section styles {
    @Styles.Render("~/content/jqueryui/jqueryui-css")
}

@section scripts {
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script>
        function deleteTable(tableName) {
            yesnodialog('Yes', 'No', 'Are you sure you want to delete ' + tableName + '?', function (r) {
                if (r) {
                    $('#delete-' + tableName).submit();
                }
            });
        };

        function yesnodialog(button1, button2, text, onClose){
            var btns = {};
            btns[button1] = function(){ 
                $(this).dialog("close");
                onClose(true);
            };
            btns[button2] = function(){ 
                $(this).dialog("close");
                onClose(false);
            };
            $("<div><span>"+text+"</div>").dialog({
                autoOpen: true,
                title: 'Condition',
                modal:true,
                buttons:btns
            });
        }
    </script>
}